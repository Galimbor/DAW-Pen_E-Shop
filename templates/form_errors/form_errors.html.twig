{% form_theme form _self %}

{# form_errors.html.twig #}
{% block form_errors %}
        {% if errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li class="fa fa-exclamation-triangle error-message">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
{% endblock form_errors %}