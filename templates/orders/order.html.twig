{% extends 'base.html.twig' %}

{% block title %} My orders {% endblock %}

{% block body %}
    <!-- Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="bread-inner">
                        <ul class="bread-list">
                            <li><a href="{{ path('index') }}">Home<i class="ti-arrow-right"></i></a></li>
                            <li class="active"><a href="{{ path('myOrders') }}">My Orders</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->

    <!-- Start Contact -->
    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="form-main">
                            <div class="title text-center">
                                <h4>Thank you for shopping with us!</h4>
                                <h3>Your orders</h3>
                            </div>
                            <div class="form">
                                <div class="row">
                                    <div class="col-lg-12 col-12">
                                        <div class="col-lg-12 col-12">
                                            {% for order in orders %}
                                                <div class="single-head mt-3">
                                                    <div class="single-info">
                                                        {# <i class="fa fa-phone"></i> #}
                                                        <div class="float-left">
                                                            <h4 class="title">Order number {{ order.id }}. ({% if order.status == 1 %}Processed{% endif %})</h4>
                                                            <p class="">Order made at : {{ order.createdAt }}</p>
{#                                                            <p class="sub-title">Order status is : {{ order.status }}</p>#}
                                                        </div>
                                                        <div class="">

                                                        <button class="btn float-right mb-5" data-toggle="collapse" data-target="#order{{ order.id }}"> Check order details</button>
                                                        </div>
                                                        <div class="collapse" id="order{{ order.id }}">
                                                        <ul>
{#                                                            <li class="mb-2">Order made at : {{ order.createdAt }}</li>#}
                                                            {# <li class="mb-2">Total amount was : {{ order.total }}</li> #}
                                                            <li class="">
                                                                <div class="col-12">
                                                                    <!-- Shopping Summery -->
                                                                    <table class="table shopping-summery">
                                                                        <thead>
                                                                        <tr class="main-hading">
                                                                            <th>PRODUCT</th>
                                                                            <th>NAME</th>
                                                                            <th class="text-center">UNIT PRICE</th>
                                                                            <th class="text-center">QUANTITY</th>
                                                                            <th class="text-center">TOTAL</th>
                                                                        </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                        <!--						The order begins here-->
                                                                        {% for orderitem in order.orderItems %}

                                                                            <tr>
                                                                                <td class="image" data-title="No"><img
                                                                                            src="{{ asset('images/products/'~orderitem.product.image~'') }}"
                                                                                            alt="#"></td>
                                                                                <td class="product-des"
                                                                                    data-title="Description">
                                                                                    <p class="product-name"><a
                                                                                                href="#">{{ orderitem.product.name }}</a>
                                                                                    </p>
                                                                                    <p class="product-des">{{ orderitem.product.description }}</p>
                                                                                </td>
                                                                                <td class="price" data-title="Price">
                                                                                    <span>{{ orderitem.product.price }} £ </span>
                                                                                </td>
                                                                                <td class="qty" data-title="Qty">
                                                                                    <!-- Input Order -->
                                                                                    <div class="total-amount">
                                                                                        {# <input type="text" name="quant[1]" class="input-number"  data-min="1" data-max="100" value="{{ orderitem.quantity }}"> #}
                                                                                        {{ orderitem.quantity }}
                                                                                    </div>
                                                                                    <!--/ End Input Order -->
                                                                                </td>
                                                                                <td class="total-price"
                                                                                    data-title="Total">
                                                                                    <span>{{ orderitem.quantity * orderitem.product.price }} £</span>
                                                                                </td>

                                                                            </tr>
                                                                        {% endfor %}
                                                                        <!--							The order actually ends here-->
                                                                        <tr>
                                                                            <td class="price" data-title="Price">
                                                                                <span>{{ NULL }}  </span></td>
                                                                            <td class="product-des"
                                                                                data-title="Description">
                                                                                <p class="product-name"><a
                                                                                            href="#">{{ NULL }}</a></p>
                                                                                <p class="product-des">{{ NULL }}</p>
                                                                            </td>
                                                                            <td class="price" data-title="Price">
                                                                                <span>{{ NULL }}  </span></td>
                                                                            <td class="qty" data-title="Qty">
                                                                                <!-- Input Order -->
                                                                                <div class="total-amount">
                                                                                    {# <input type="text" name="quant[1]" class="input-number"  data-min="1" data-max="100" value="{{ orderitem.quantity }}"> #}
                                                                                    The total amount is :
                                                                                </div>
                                                                                <!--/ End Input Order -->
                                                                            </td>
                                                                            <td class="total-price" data-title="Total">
                                                                                <span>{{ order.total }} £</span></td>

                                                                        </tr>
                                                                        </tbody>

                                                                    </table>
                                                                    <!--/ End Shopping Summery -->
                                                                </div>


                                                            </li>
{#                                                           cLOSE here#}
                                                        </ul>
                                                        </div>


                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}